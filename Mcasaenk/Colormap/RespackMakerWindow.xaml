<Window x:Class="Mcasaenk.UI.RespackMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mcasaenk.UI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="{StaticResource BACK}"
        Title="Colormap tooling" Height="600" Width="800">

    <Border Margin="20">
        <Grid>
            <TextBlock x:Name="txt_loading" Text="Loading..." FontSize="32" HorizontalAlignment="Center" Visibility="Collapsed" VerticalAlignment="Center"/>
            <local:ColormapEditor x:Name="colormap_editor" Visibility="Collapsed"/>
            <local:ColormapMaker x:Name="colormap_maker" Visibility="Collapsed"/>
        </Grid>
    </Border>
    
</Window>
