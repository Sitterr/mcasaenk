                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path=resourcepack, Mode=OneTime, Converter={StaticResource PlusNumberConverter}, ConverterParameter=resourcepack}" FontSize="14" FontStyle="Italic"/>
            </Grid>

        </Grid>
        <DataTemplate.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}" />
        </DataTemplate.Resources>
    </DataTemplate>




