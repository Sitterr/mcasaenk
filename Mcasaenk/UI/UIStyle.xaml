            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="7" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Height="48" BorderThickness="1" BorderBrush="{StaticResource BORDER}">
                <Image Source="{Binding Path=image, Mode=OneTime}" Margin="-0.5 -0.2 0 0" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </Border>
            <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Top">
