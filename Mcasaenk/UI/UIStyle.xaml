            --><Run Text="/," FontSize="10"/>
                
                <Run Text="/" FontSize="10"/><!--
             --><Run Text="{Binding Path=version_name, Mode=OneTime}" FontSize="10" Foreground="{StaticResource LIGHT_BLUE_B}"/><!--
             --><Run Text="/" FontSize="10"/>

            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" FontSize="12">
                <Run Text="{Binding Path=foldername, Mode=OneTime}"/>
                <Run Text="("/><!--
             --><Run Text="{Binding Path=lastopened, Mode=OneTime}"/><!--
             --><Run Text=")"/>
            </TextBlock>

            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
